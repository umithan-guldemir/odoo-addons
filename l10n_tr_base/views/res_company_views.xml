<?xml version="1.0" encoding="utf-8"?>
<odoo>

		<record id="view_company_form_l10n_tr" model="ir.ui.view">
			<field name="name">res.company.form.l10n_tr</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="base.view_company_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat']" position="after">
					<field name="tax_office_name" invisible="1"/>
					<field name="mersis" invisible="1"/>
					<field name="commercial_id_no" invisible="1"/>
				</xpath>
			</field>
		</record>

</odoo>