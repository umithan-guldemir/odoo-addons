<?xml version="1.0" encoding="UTF-8"?>
<odoo>

		<record id="res_partner_form_view_l10n_tr" model="ir.ui.view">
			<field name="name">res.partner.form.l10n_tr</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='vat']" position="after">
					<field name="tax_office_name" attrs="{'readonly': [('parent_id','!=',False)]}" invisible="1" />
					<field name="mersis" attrs="{'readonly': [('parent_id','!=',False)]}" invisible="1" />
					<field name="commercial_id_no" attrs="{'readonly': [('parent_id','!=',False)]}" invisible="1" />
				</xpath>
			</field>
		</record>
</odoo>
